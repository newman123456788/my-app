<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="reset"
            android:id="@+id/btnrt"
            android:textAllCaps="false"
            android:layout_marginBottom="130dp"
            android:layout_marginRight="20dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:background="#FFEB3B">

        </androidx.appcompat.widget.AppCompatButton>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|start"
            android:layout_marginBottom="200dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btngrd"
            >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:textColor="#fff"

            android:textSize="50dp"
            android:text=" qadamlar : "
                >

            </TextView>
            <TextView
                android:id="@+id/txt1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:textSize="50dp"
                android:text="0"
                android:textColor="#fff"
                >

            </TextView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlv1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="1"
            android:id="@+id/btn1">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="2"
            android:id="@+id/btn2"
            android:layout_toRightOf="@id/btn1">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="3"
            android:id="@+id/btn3"
            android:layout_toRightOf="@id/btn2">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="4"
            android:id="@+id/btn4"
            android:layout_toRightOf="@id/btn3">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="5"
            android:id="@+id/btn5"
            android:layout_below="@id/btn1"
            >

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="6"
            android:id="@+id/btn6"
            android:layout_below="@id/btn2"
            android:layout_toRightOf="@id/btn5">


        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"
            android:background="@drawable/btn"
            android:text="7"
            android:id="@+id/btn7"
            android:layout_toRightOf="@id/btn6"
            android:layout_below="@id/btn3">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"

            android:background="@drawable/btn"
            android:text="8"
            android:id="@+id/btn8"
            android:layout_toRightOf="@id/btn7"
            android:layout_below="@id/btn4">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"

            style="@style/mybtn"
            android:layout_below="@id/btn5"
            android:background="@drawable/btn"
            android:text="9">

        </androidx.appcompat.widget.AppCompatButton><androidx.appcompat.widget.AppCompatButton
        style="@style/mybtn"

        android:background="@drawable/btn"
        android:text="10"
        android:id="@+id/btn10"
        android:layout_toRightOf="@id/btn9"
        android:layout_below="@id/btn6">


    </androidx.appcompat.widget.AppCompatButton><androidx.appcompat.widget.AppCompatButton
        style="@style/mybtn"

        android:background="@drawable/btn"
        android:text="11"
        android:id="@+id/btn11"
        android:layout_toRightOf="@id/btn10"
        android:layout_below="@id/btn7">

    </androidx.appcompat.widget.AppCompatButton><androidx.appcompat.widget.AppCompatButton
        style="@style/mybtn"

        android:background="@drawable/btn"
        android:text="12"
        android:id="@+id/btn12"
        android:layout_toRightOf="@id/btn11"
        android:layout_below="@id/btn8">

    </androidx.appcompat.widget.AppCompatButton><androidx.appcompat.widget.AppCompatButton
        style="@style/mybtn"

        android:background="@drawable/btn"
        android:text="13"
        android:id="@+id/btn13"
        android:layout_below="@id/btn9">

    </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"

            android:background="@drawable/btn"
            android:text="14"
            android:id="@+id/btn14"
            android:layout_below="@id/btn9"
            android:layout_toRightOf="@id/btn13">

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"

            android:background="@drawable/btn"
            android:text="15"
            android:id="@+id/btn15"
            android:layout_below="@id/btn11"
            android:layout_toRightOf="@id/btn14"
            >

        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/mybtn"

            android:background="@drawable/btn"
            android:text=""
            android:id="@+id/btn16"
            android:layout_toRightOf="@id/btn15"
            android:layout_below="@id/btn12"
            >

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</FrameLayout>